FROM python:3.8-slim

WORKDIR /app

RUN apt-get update && apt-get install -y curl && rm -rf /var/lib/apt/lists/*

# Copy and install client dependencies
COPY requirements.asia.txt requirements.txt
RUN pip install -r requirements.txt

# Copy client application code and model loader
COPY client.py model_pytorch.py data_loader.py ./
# Copy startup script
COPY start.sh ./
RUN chmod +x start.sh

CMD ["./start.sh"]